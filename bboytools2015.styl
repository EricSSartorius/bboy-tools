/*------------------------------------*\
    $VARIABLES
\*------------------------------------*/


// Colors
blue = #607D8B
yellow = #FFC107
text = #212121
dark-blue = #455A64
light-blue = #CFD8DC
light-grey = #B6B6B6
grey = #727272

red = #e51c23
purple = #673ab7
indigo = #3f51b5
green = #259b24
orange = #ff9800

social = {
    twitter: #00aced,
    facebook: #3b5998,
    google: #dd4b39,
    youtube: #bb0000
}

moves = {
	top-rock: blue,
	go-down: purple,
	footwork: green,
	power-move: red,
	freeze: indigo,
	burner: orange
}

// Grid
$xsmall = 340px
$small = 500px
$med = 800px
$large = 960px
$wide = 1200px

// Layers
z = {
    video: 7,
    header: 8,
    nav: 9,
    modal: 10
}





/*------------------------------------*\
    $BASE
\*------------------------------------*/


normalize-css()

html
    box-sizing: border-box

*, *:before, *:after
    box-sizing: inherit

body 
	font-family: 'Roboto', sans-serif
	background: #DEDEDE
	color text 
	padding-top 200px 

[type=checkbox]
	// display:none;

 
[type=checkbox] + label
	display:inline-block;
	padding: 0 0 0 0px;
	color #333
	cursor pointer

[type=checkbox]:checked + label
	display:inline-block;
	padding: 0 0 0 0px;
	color red


.btn
	background blue
	color #FFF
	text-transform uppercase
	border none
	border-radius 4px 
	padding: 25px 80px
	font-weight 700 
	transition: all 0.3s
	&.btn-cancel
		background red 
	&.btn-start
		background green   

header 
	background blue
	color #fff
	padding 20px
	fixed top left
	width 100%
	z-index: z.nav
	box-shadow: 1px 3px 4px rgba(#000000, 0.22), -3px 1px 4px rgba(#000000, 0.15)
	clearfix()
	h1, h2
		margin 0 
		float left

.main-nav
	float right
	a
		text-decoration none
	ul
		list-style none
		padding 0
	li
		float left

#login-dropdown-list
	position fixed
	right 0
	border none
	border-radius 0
	left auto
	box-shadow: 1px 3px 4px rgba(#000000, 0.22), -3px 1px 4px rgba(#000000, 0.15)
	background blue
	color #FFF
	width 100% 
	top 0
	margin 0
	height 100%  

#login-buttons, .accounts-dialog
	label 
		font-size 1.6em 
	input[type=text], input[type=text], input[type=email], input[type=email], input[type=password], input[type=password]
		appearance none 
		background blue + 20
		border-radius 0
		border none 
		font-size 1.6em 





/*------------------------------------*\
    $HOMEPAGE
\*------------------------------------*/


.homepage-zone
	text-align center

.brand-new-move
	display none

.types
	position relative
	background: #FFF
	width: 98%
	margin: 0 auto
	display: flex
	flex-wrap: wrap
	justify-content: space-between
	border-radius: 12px
	padding: 30px 40px
	box-shadow: -4px 2px 6px rgba(#000000, 0.09), 2px 2px 7px rgba(#000000, 0.08)
	+above($large)
		width: 90%
		padding: 40px 80px

.book
	width 120px 
	height 180px 
	top -110px 
	left 50%
	transform: translateX(-60px)  
	position absolute
	border-radius 9px 
	background #333
	box-shadow: 1px 3px 4px rgba(#000000, 0.22), -3px 1px 4px rgba(#000000, 0.15)
	+above($med)
		top -40px
		left -50px
		transform: translateX(0)
	p
		background #FFF 
		font-size 56px 
		margin 50px 10px
		border-radius 5px
		text-align center 
	.book-title
		display none   

.type
	width 100% 
	+above($large)
		width: 48%
	h3
		border-bottom: solid 4px green
		font-size: 38px;
		padding-bottom 6px 
	for $label, $color in moves
		&.{$label}
			h3
				border-color $color

.moves
	list-style none
	padding 0

.move
	margin 0 10px 20px
	font-size: 26px
	&:first-child
		display none
	> .controls
		display: none
		&.open
			display inline-block

.move-form
	font-size 26px 
		
.new-move
	display: flex
	justify-content space-apart 
	input
		width 60% 
		padding: 10px 13px 6px
		background: #EEEEEE
		border: none
		& + input
			width 25% 
			margin-left 2.5%
	button
		margin-left 2.5% 
		background yellow
		border: none
		color #FFF
		text-align center
		width 10%
		transition all 0.2s ease
		&:hover 
			background yellow - 20 
		
.add-new-move
	width 100%
	background #FFF
	border none
	color light-grey
	border-top @color solid 4px   
	font-size 1.4em
	padding 15px 
	transform: translateY(-63px)
	transition all 0.3s ease
	&:focus
		outline none
	.form-toggle-icons
		top -2px 
		width 20px 
		height 20px 
		position relative
		display inline-block
		i
			position absolute
			transition all 0.3s ease 
	&.open
		transform: translateY(0)
		.fa-plus
			transform: scaleY(0)
	.form-toggle-text
		opacity 0 
		white-space: nowrap
		display inline-block
		width 0 
		overflow hidden
		transition all 0.3s ease 
	&:hover
		.form-toggle-text
			opacity 1 
			width 150px 


.stopwatch
	text-align center
	background: #FFF
	width: 98%
	margin: 0 auto 60px
	border-radius: 12px
	padding: 30px 40px
	box-shadow: -4px 2px 6px rgba(#000000, 0.09), 2px 2px 7px rgba(#000000, 0.08)
	+above($large)
		width: 90%
		padding: 40px 80px
		h3
			font-size 10em 
			margin 0.4em 0
		.btn
			font-size 2em
			& + .btn
				margin-left 5px 



footer
	background text
	margin-top 40px 
	color #FFF  
	padding 20px
	
.newmove-enter
  animation-duration: .75s;
  animation-name: fadeInLeft;
  transform-origin: center bottom;

.newmove-leave
  animation-name: zoomOut;
  animation-duration: .75s;
  background: yellow;
  opacity: 1.0;
  transition: opacity .5s ease-in;